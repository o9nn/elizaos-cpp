{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    "elizaos/**/*",
    "eliza/**/*",
    "privy-frames-v2-demo/**/*",
    "src/agent.ts",
    "src/lib/plugin-otc-desk/**/*",
    "src/plugin-groq.ts",
    "src/services/quoteApprovalWorker.ts",
    "dist/**/*",
    "solana/**/*",
    "contracts/**/*",
    "tests/**/*",
    "scripts/**/*",
    "a2a-js/src/samples/**/*",
    "a2a-js/test/**/*"
  ]
}
