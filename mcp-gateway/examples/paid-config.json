          }
        }
      ]
    },
    {
      "name": "user-review",
      "command": "npx",
      "args": ["-y", "user-review-mcp"],
      "namespace": "review",
      "enabled": true,
      "defaultPricing": {
        "x402": "$0.02",
        "apiKeyTiers": {
          "basic": "$0.01",
          "premium": "$0.005"
